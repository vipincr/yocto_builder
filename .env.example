# ============================================
# Yocto Builder Platform - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# ============================================
# Database Configuration
# ============================================
DATABASE_URL="postgresql://yocto_admin:your_password_here@localhost:5432/yocto_builder"

# ============================================
# NextAuth Configuration
# ============================================
# For local development
NEXTAUTH_URL="http://localhost:3000"
# For production (update with your domain/IP)
# NEXTAUTH_URL="https://your-domain.com"

# Generate a secure secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# ============================================
# OAuth Providers (at least one required)
# ============================================
# GitHub OAuth App: https://github.com/settings/developers
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# Google OAuth: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# ============================================
# Application Directories
# ============================================
BUILDS_DIRECTORY="/data/builds"
LOGS_DIRECTORY="/var/log/yocto_builder"

# ============================================
# Docker Configuration
# ============================================
DOCKER_HOST="unix:///var/run/docker.sock"
POKY_IMAGE_KIRKSTONE="yocto-builder/poky-kirkstone:4.0"
POKY_IMAGE_SCARTHGAP="yocto-builder/poky-scarthgap:5.0"

# ============================================
# Build Container Resources
# ============================================
# Allocate most resources to build containers
# Default: 6 CPUs and 28GB RAM (for 8 vCPU, 32GB RAM server)
BUILD_CONTAINER_CPUS=6
BUILD_CONTAINER_MEMORY="28g"

# ============================================
# AWS Deployment Configuration (optional)
# ============================================
# Only needed if deploying to AWS EC2
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="ap-south-1"
AWS_EC2_INSTANCE_TYPE="m5.2xlarge"
AWS_EC2_KEY_NAME="your-key-pair-name"
AWS_EC2_KEY_PATH=".secrets/your-key.pem"

# ============================================
# Application Repository (for deployment)
# ============================================
# Update this to your repository URL
APP_REPO="https://github.com/your-org/yocto_builder.git"
APP_BRANCH="main"
POSTGRESQL_PASSWORD="your_secure_password"
